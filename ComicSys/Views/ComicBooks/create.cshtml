@model ComicSys.Models.ComicBook

<h2>Add Comic Book</h2>

<form asp-action="Create">
    <div>
        <label>Title</label>
        <input asp-for="Title" />
    </div>
    <div>
        <label>Author</label>
        <input asp-for="Author" />
    </div>
    <div>
        <label>Price Per Day</label>
        <input asp-for="PricePerDay" />
    </div>
    <button type="submit">Save</button>
</form>
