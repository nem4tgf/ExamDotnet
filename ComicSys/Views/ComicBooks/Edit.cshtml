@model ComicSys.Models.ComicBook

<h2>Edit Comic Book</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="ComicBookID" />
    <div>
        <label>Title</label>
        <input asp-for="Title" />
    </div>
    <div>
        <label>Author</label>
        <input asp-for="Author" />
    </div>
    <div>
        <label>Price Per Day</label>
        <input asp-for="PricePerDay" />
    </div>
    <button type="submit">Save</button>
</form>
